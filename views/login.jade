extends ./layout.jade
block contenido
	h1 Bien venidos a login
	form(action="/users",method="POST")
		div(class="form-group")
			label(for="email") Correo
			input(type="text",name="email",placeholder="Correo", id="email",class="form-control")
		div
			label(for="password") Contraseña
			input(type="password",name="password",placeholder="Correo", id="password",class="form-control")
		div
			label(for="password_confirmation") Confirma tu Contraseña
			input(type="password",name="password_confirmation",placeholder="Correo", id="password_confirmation",class="form-control")
		div
		input(type="submit" value="Iniciar sesión" class="btn btn-info")